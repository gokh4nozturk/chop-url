{
  "name": "chop-url",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",

    "deploy": "node scripts/deploy.js run",
    "deploy:prod": "node scripts/deploy.js run -e prod all",
    "deploy:dev": "node scripts/deploy.js run -e dev all",
    "deploy:lib": "node scripts/deploy.js run lib",

    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "commander": "^13.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["biome format --write", "biome lint --apply"]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@aws-sdk/s3-request-presigner": "^3.750.0",
    "ua-parser-js": "^2.0.2"
  },
  "packageManager": "pnpm@8.9.0"
}
