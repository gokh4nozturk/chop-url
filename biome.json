{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "**/dist/**",
      "**/.vercel/**",
      "**/.wrangler/**",
      "**/node_modules/**",
      "**/.next/**",
      "**/coverage/**",
      "**/public/**",
      "**/migrations/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": [
      "**/dist/**",
      "**/.vercel/**",
      "**/.wrangler/**",
      "**/node_modules/**",
      "**/.next/**",
      "**/coverage/**",
      "**/public/**",
      "**/migrations/**"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "always"
    }
  }
}
