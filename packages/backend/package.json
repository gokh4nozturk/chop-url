{
  "name": "@chop-url/backend",
  "version": "1.0.0",
  "description": "A modern URL shortening service and library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "node dist/server.js",
    "dev": "wrangler dev",
    "build": "tsc",
    "build:worker": "npm run build:lib && esbuild src/worker.ts --bundle --outfile=dist/worker.js --platform=node --format=esm",
    "build:lib": "cd ../chop-url-lib && npm run build",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "deploy": "npm run build:worker && wrangler deploy"
  },
  "keywords": [
    "url-shortener",
    "url",
    "shortener",
    "typescript",
    "express",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gokh4nozturk/chop-url.git"
  },
  "bugs": {
    "url": "https://github.com/gokh4nozturk/chop-url/issues"
  },
  "homepage": "https://github.com/gokh4nozturk/chop-url#readme",
  "dependencies": {
    "@chop-url/lib": "file:../chop-url-lib",
    "@types/swagger-ui-express": "^4.1.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.x",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hono": "^4.0.1",
    "nanoid": "^3.3.4",
    "pg": "^8.x",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.28.1"
  },
  "peerDependencies": {
    "express": "^4.x",
    "pg": "^8.x"
  }
