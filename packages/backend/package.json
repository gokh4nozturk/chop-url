{
  "name": "@chop-url/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --port 8787",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "deploy": "wrangler deploy --minify src/index.ts",
    "deploy:prod": "wrangler deploy --minify src/index.ts --env production",
    "migrate": "wrangler d1 execute chop-url-db --file=schema.sql --remote",
    "migrate:local": "wrangler d1 execute chop-url-db-local --file=schema.sql --remote",
    "db:reset": "wrangler d1 execute chop-url-db --file=schema.sql"
  },
  "keywords": ["url-shortener", "cloudflare-workers", "typescript"],
  "author": "Gokhan Ozturk",
  "license": "MIT",
  "dependencies": {
    "@chop-url/lib": "workspace:*",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-validator": "^0.4.2",
    "@hono/zod-openapi": "0.18.4",
    "cors": "^2.8.5",
    "hono": "^4.0.7",
    "nanoid": "^5.0.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/cors": "^2.8.17",
    "@vitest/coverage-v8": "^1.3.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "wrangler": "^3.28.2"
  }
}
