{
  "name": "@chop-url/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --port 8787",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "deploy": "wrangler deploy --minify src/index.ts",
    "deploy:prod": "wrangler deploy --minify src/index.ts --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply chop-url-db-local --remote",
    "db:migrate:prod": "wrangler d1 migrations apply chop-url-db --remote",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "url-shortener",
    "cloudflare-workers",
    "typescript"
  ],
  "author": "Gokhan Ozturk",
  "license": "MIT",
  "dependencies": {
    "@chop-url/lib": "workspace:*",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.39.2",
    "hono": "^4.0.7",
    "nanoid": "^5.0.6",
    "resend": "^4.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/cors": "^2.8.17",
    "@vitest/coverage-v8": "^1.3.1",
    "drizzle-kit": "^0.30.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "wrangler": "^3.107.3"
  }
}
